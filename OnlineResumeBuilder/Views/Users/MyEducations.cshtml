@model OnlineResumeBuilder.Models.MyEducations
@{
    ViewBag.Title = "MyEducations";
    Layout = "~/Views/Shared/TemplateDashboardView.cshtml";
}

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link type="text/css" rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
    <script type="text/javascript" src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>


</head>
<body>

    @using (Html.BeginForm())
    {
        <div class="container justify-content-center border-secondary col-5">
            <h2 class="text-center">Education Details</h2>
            <div class="form-control border-primary">
             
                    <div class="container mb-1">
                        <div class="m-2 text-center">Education Qualification 1</div>
                        <div class="form-control">

                            <div class="form-group m-2">
                                @Html.LabelFor(model => model.Education.InstituteName)
                                @Html.TextBoxFor(model => model.Education.InstituteName, new { @class = "form-control" })
                                <div><small class="text-danger">@Html.ValidationMessageFor(model => model.Education.InstituteName)</small></div>
                            </div>
                            <div class="form-group m-2">
                                @Html.LabelFor(model => model.Education.InstituteLocation)
                                @Html.TextBoxFor(model => model.Education.InstituteLocation, new { @class = "form-control" })
                                <div><small class="text-danger">@Html.ValidationMessageFor(model => model.Education.InstituteLocation)</small></div>
                            </div>
                            <div class="form-group m-2">
                                @Html.LabelFor(model => model.Education.Qualification)
                                @Html.TextBoxFor(model => model.Education.Qualification, new { @class = "form-control" })
                                <div><small class="text-danger">@Html.ValidationMessageFor(model => model.Education.Qualification)</small></div>
                            </div>
                            <div class="form-group m-2">
                                @Html.LabelFor(model => model.Education.CompletionYear)
                                @Html.TextBoxFor(model => model.Education.CompletionYear, new { @class = "form-control" ,@type="number"});
                                <div><small class="text-danger">@Html.ValidationMessageFor(model => model.Education.CompletionYear)</small></div>
                            </div>
                        </div>
                    </div>
                    <div class="container mb-1">
                        <div class="m-2 text-center">Education Qualification 2</div>
                        <div class="form-control">

                            <div class="form-group m-2">
                                @Html.LabelFor(model => model.EducationSecond.InstituteName)
                                @Html.TextBoxFor(model => model.EducationSecond.InstituteName, new { @class = "form-control" })
                                <div><small class="text-danger">@Html.ValidationMessageFor(model => model.EducationSecond.InstituteName)</small></div>
                            </div>
                            <div class="form-group m-2">
                                @Html.LabelFor(model => model.EducationSecond.InstituteLocation)
                                @Html.TextBoxFor(model => model.EducationSecond.InstituteLocation, new { @class = "form-control" })
                                <div><small class="text-danger">@Html.ValidationMessageFor(model => model.EducationSecond.InstituteLocation)</small></div>
                            </div>
                            <div class="form-group m-2">
                                @Html.LabelFor(model => model.EducationSecond.Qualification)
                                @Html.TextBoxFor(model => model.EducationSecond.Qualification, new { @class = "form-control" })
                                <div><small class="text-danger">@Html.ValidationMessageFor(model => model.EducationSecond.Qualification)</small></div>
                            </div>
                            <div class="form-group m-2">
                                @Html.LabelFor(model => model.EducationSecond.CompletionYear)
                                @Html.TextBoxFor(model => model.EducationSecond.CompletionYear, new { @class = "form-control", @type="number" })
                                <div><small class="text-danger">@Html.ValidationMessageFor(model => model.EducationSecond.CompletionYear)</small></div>
                            </div>
                        </div>
                    </div>

              
                <div class="justify-content-center text-center m-3">
                    <button class="btn btn-primary" type="submit">Submit</button>
                </div>
            </div>
            </div>
            }

            
    </body>
<script src="~/Scripts/MyScripts/PreventBrowserBack.js"></script>