@model OnlineResumeBuilder.Models.PersonalDetails
@{
    ViewBag.Title = "PersonalDetails";
    Layout = "~/Views/Shared/TemplateDashboardView.cshtml";
}


<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link type="text/css" rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
    <script type="text/javascript" src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    @* <script src="https://cdn.jsdelivr.net/jquery.ajax.unobtrusive/3.2.6/jquery.unobtrusive-ajax.min.js"></script>*@
    <script src="~/Scripts/MyScripts/DropDown.js"></script>
</head>




<body>

    @using (Html.BeginForm("PersonalDetails", "Users", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        <div class="container justify-content-center border-secondary col-5">
            <h2 class="text-center">Personal Details</h2>
            <div class="form-control border-primary">
                <div class="form-control">
                    <!-- Profile Photo input -->
                    <div class="form-group m-2">
                        @Html.LabelFor(model => model.ProfilePhoto)
                        <input type="file" name="ProfileFile" class="form-control" />
                    </div>

                    <!-- First Name input -->
                    <div class="form-group m-2">
                        @Html.LabelFor(model => model.FirstName)
                        @Html.TextBoxFor(model => model.FirstName, new { @class = "form-control" })
                        <div><small class="text-danger">@Html.ValidationMessageFor(model => model.FirstName)</small></div>
                    </div>

                    <!-- Last Name input -->
                    <div class="form-group m-2">
                        @Html.LabelFor(model => model.LastName)
                        @Html.TextBoxFor(model => model.LastName, new { @class = "form-control" })
                        <div><small class="text-danger">@Html.ValidationMessageFor(model => model.LastName)</small></div>

                    </div>


                    <!-- Profession -->
                    <div class="form-group m-2">
                        @Html.LabelFor(model => model.Profession)
                        @Html.TextBoxFor(model => model.Profession, new { @class = "form-control" })
                        <div><small class="text-danger">@Html.ValidationMessageFor(model => model.Profession)</small></div>
                    </div>

                    <!-- Profession -->
                    <div class="form-group m-2">
                        @Html.LabelFor(model => model.ProfessionalDescription)
                        @Html.TextAreaFor(model => model.ProfessionalDescription, new { @class = "form-control" })
                        <div><small class="text-danger">@Html.ValidationMessageFor(model => model.ProfessionalDescription)</small></div>
                    </div>


                    <!-- Country input -->
                    <div class="form-group m-2">
                        @Html.LabelFor(model => model.Country)
                        @*  @Html.TextBoxFor(model => model.Country, new { @class = "form-control" })*@
                        <div> @Html.DropDownListFor(model => model.Country, new SelectList(Enum.GetValues(typeof(OnlineResumeBuilder.Models.Country))), "Select", new { @class = "text-box form-control" })</div>
                        <div><small class="text-danger">@Html.ValidationMessageFor(model => model.Country)</small></div>


                    </div>

                    <!-- State input -->
                    <div class="form-group m-2">
                        @Html.LabelFor(model => model.State)
                        <div> @Html.DropDownListFor(model => model.State, new List<SelectListItem>(), "Select", new { @class = "text-box form-control" })</div>
                        @*  @Html.TextBoxFor(model => model.State, new { @class = "form-control" })*@
                        <div><small class="text-danger">@Html.ValidationMessageFor(model => model.State)</small></div>
                    </div>

                    <!-- City input -->
                    <div class="form-group m-2">
                        @Html.LabelFor(model => model.City)
                        @* @Html.TextBoxFor(model => model.City, new { @class = "form-control" })*@
                        <div> @Html.DropDownListFor(model => model.City, new List<SelectListItem>(), "Select", new { @class = "text-box form-control" })</div>
                        <div><small class="text-danger">@Html.ValidationMessageFor(model => model.City)</small></div>
                    </div>

                    <!-- Phone Number input -->
                    <div class="form-group m-2">
                        @Html.LabelFor(model => model.PhoneNumber)
                        @Html.TextBoxFor(model => model.PhoneNumber, new { @class = "form-control", @type = "number" })
                        <div><small class="text-danger">@Html.ValidationMessageFor(model => model.PhoneNumber)</small></div>
                    </div>

                    <!-- Email input -->
                    <div class="form-group m-2">
                        @Html.LabelFor(model => model.Email)
                        @Html.TextBoxFor(model => model.Email, new { @class = "form-control" })
                        <div><small class="text-danger">@Html.ValidationMessageFor(model => model.Email)</small></div>
                    </div>

                    <!-- Languages input -->
                    <div class="form-group m-2">
                        @Html.LabelFor(model => model.Languages)
                        @Html.TextBoxFor(model => model.Languages, new { @class = "form-control" })
                        <div><small class="text-danger">@Html.ValidationMessageFor(model => model.Languages)</small></div>
                    </div>
                </div>

                <!-- Submit Button -->
                <div class="justify-content-center text-center m-3">
                    <button class="btn btn-primary" type="submit">Submit</button>
                </div>
            </div>
        </div>
    }


    <script src="~/Scripts/MyScripts/PreventBrowserBack.js"></script>

</body>