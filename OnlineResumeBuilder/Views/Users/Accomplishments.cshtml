@model OnlineResumeBuilder.Models.Accomplishments
@{
    ViewBag.Title = "Accomplishments";
    Layout = "~/Views/Shared/TemplateDashboardView.cshtml";
}

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link type="text/css" rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
    <script type="text/javascript" src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>


</head>

<body>
    @using (Html.BeginForm())
    {<div class="container justify-content-center border-secondary col-5">
            <h2 class="text-center">Accomplishments</h2>
            <div class="form-control border-primary">
                    <div class="container mb-1">
                        <div class="m-2 text-center">Skills</div>
                        <div class="form-control">

                            <div class="form-group m-2">
                                @Html.LabelFor(model => model.Skill.Skills)
                                @Html.TextBoxFor(model => model.Skill.Skills, new { @class = "form-control" })
                                <div><small class="text-danger">@Html.ValidationMessageFor(model => model.Skill.Skills)</small></div>
                            </div>

                        </div>
                    </div>
                    <div class="container mb-1">
                        <div class="m-2 text-center">Project</div>
                        <div class="form-control">

                            <div class="form-group m-2">
                                @Html.LabelFor(model => model.Projects.ProjectTitle)
                                @Html.TextBoxFor(model => model.Projects.ProjectTitle, new { @class = "form-control" })
                                <div><small class="text-danger">@Html.ValidationMessageFor(model => model.Projects.ProjectTitle)</small></div>
                            </div>
                            <div class="form-group m-2">
                                @Html.LabelFor(model => model.Projects.Description)
                                @Html.TextAreaFor(model => model.Projects.Description, new { @class = "form-control" })
                                <div><small class="text-danger">@Html.ValidationMessageFor(model => model.Projects.Description)</small></div>
                            </div>

                        </div>
                    </div>

                    <div class="container mb-1">
                        <div class="m-2 text-center">Internship</div>
                        <div class="form-control">
                            <div class="form-group m-2">
                                @Html.LabelFor(model => model.Internship.Title)
                                @Html.TextBoxFor(model => model.Internship.Title, new { @class = "form-control" })
                                <div><small class="text-danger">@Html.ValidationMessageFor(model => model.Internship.Title)</small></div>
                            </div>
                            <div class="form-group m-2">
                                @Html.LabelFor(model => model.Internship.Description)
                                @Html.TextAreaFor(model => model.Internship.Description, new { @class = "form-control" })
                                <div><small class="text-danger">@Html.ValidationMessageFor(model => model.Internship.Description)</small></div>
                            </div>
                        </div>
                    </div>

                    <div class="container mb-1">
                        <div class="m-2 text-center">Certification</div>
                        <div class="form-control">
                            <div class="form-group m-2">
                                @Html.LabelFor(model => model.Certification.Title)
                                @Html.TextBoxFor(model => model.Certification.Title, new { @class = "form-control" })
                                <div><small class="text-danger">@Html.ValidationMessageFor(model => model.Certification.Title)</small></div>
                            </div>
                            <div class="form-group m-2">
                                @Html.LabelFor(model => model.Certification.Description)
                                @Html.TextAreaFor(model => model.Certification.Description, new { @class = "form-control" })
                                <div><small class="text-danger">@Html.ValidationMessageFor(model => model.Certification.Description)</small></div>
                            </div>
                        </div>
                    </div>

                <div class="justify-content-center text-center m-3">
                    <button class="btn btn-primary" type="submit">Finish</button>
                </div>
            </div>
    </div>
            }

    </body>
<script src="~/Scripts/MyScripts/PreventBrowserBack.js"></script>