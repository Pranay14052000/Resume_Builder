
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Admin_Layout</title>
    <link href="~/Content/MyStyles/Admin_Layout.css" rel="stylesheet" />
    <link type="text/css" rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
    <script type="text/javascript" src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/Scripts/MyScripts/Logout.js"></script>
</head>
<body>
    <Header class="header-external-container">
        <div class="username-div">Welcome... @Session["UserName"] </div>
        <nav class="navbar-class">
            <ul class="navlink-ul">
                @if (Session["RegistrationAccess"] != null && Session["RegistrationAccess"].ToString() == "True")
                {
                    <li class="navigation-link">@Html.ActionLink("Admin Registration", "AdminRegistration", "Admin")</li>
                }
                <li class="navigation-link">@Html.ActionLink("Users Information", "UserInformation", "Admin")</li>
                <li class="navigation-link">@Html.ActionLink("Contacts", "Contacts", "Admin")</li>
                <button type="button" class="btn btn-danger btn-sm" data-bs-toggle="modal" data-bs-target="#exampleModal">
                    Logout
                </button>
            </ul>

        </nav>

    </Header>
    <div class="content-div">
        <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h1 class="modal-title fs-5" id="exampleModalLabel">Logout</h1>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        Are u sure..u want to Logout?
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">No</button>
                        <button type="button" class="btn btn-success" id="yesButton">Yes</button>
                    </div>
                </div>
            </div>
        </div>
        @RenderBody()

    </div>
    <footer class="footer-external-container">
        <div class="footer-div-1"><span>&copy;claysys</span></div>

    </footer>
    <script>
         var redirectUrl = '@Url.Action("Home", "Dashboard")';
    </script>
</body>
</html>

